<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/place_item_height"
	android:background="@drawable/ripple"
	android:elevation="@dimen/elevation"
	android:padding="@dimen/view_padding">

	<TextView
		android:id="@+id/tv_item_place_title"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/colorPrimaryText"
		android:textSize="@dimen/place_item_title_text_size"
		app:layout_constraintBottom_toTopOf="@+id/tv_item_place_lat"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintWidth_percent="0.8"
		tools:text="Point name"/>

	<TextView
		android:id="@+id/tv_item_place_lat"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/colorSecondaryText"
		android:textSize="@dimen/place_item_data_text_size"
		app:layout_constraintBottom_toTopOf="@+id/tv_item_place_lon"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_item_place_title"
		app:layout_constraintWidth_percent="0.8"
		tools:text="47.415181"/>


	<TextView
		android:id="@+id/tv_item_place_lon"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textColor="@color/colorSecondaryText"
		android:textSize="@dimen/place_item_data_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/tv_item_place_lat"
		app:layout_constraintWidth_percent="0.8"
		tools:text="48.515181"/>

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:contentDescription="@string/cd_arrow_right"
		android:src="@drawable/ic_arrow_right"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>