<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/shape_rounded_view"
	android:backgroundTint="@color/colorWindowBg"
	android:orientation="vertical"
	android:paddingBottom="@dimen/small_view_padding">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/shape_top_rounded_view"
		android:backgroundTint="@color/colorPrimary"
		android:contentDescription="@string/cd_place"
		android:paddingBottom="@dimen/view_padding"
		android:paddingTop="@dimen/view_padding"
		android:src="@drawable/ic_location"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:padding="@dimen/small_view_padding"
		android:text="@string/dialog_place_creation_title"
		android:textColor="@color/colorSecondaryText"/>

	<EditText
		android:id="@+id/et_dialog_place"
		style="@style/AppEditText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/layout_margin"
		android:hint="@string/dialog_place_hint"
		android:inputType="text|textCapSentences"
		android:lines="1"
		android:maxLength="120"
		android:maxLines="1"
		tools:ignore="LabelFor"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="@dimen/small_view_padding">

		<Button
			android:id="@+id/btn_dialog_place_cancel"
			style="@style/AppButton.Borderless"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@android:string/cancel"/>

		<Button
			android:id="@+id/btn_dialog_place_ok"
			style="@style/AppButton.Borderless"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@android:string/ok"/>

	</LinearLayout>

</LinearLayout>